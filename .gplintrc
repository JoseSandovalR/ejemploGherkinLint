{
  "no-empty-file" : "error",
  "allow-all-caps": ["error", { "Global": false, "Description": true, "ExampleHeader": true, "ExampleBody":  true }],
  "allow-all-lowercase": ["off", { "Global": false, "Description": true, "ExampleHeader": true, "ExampleBody":  true }],
  "no-unnamed-features": "off",
  "no-files-without-scenarios": "error",
  "file-name": ["off", {"style": "camelCase"}],
  "no-unnamed-scenarios": "error",
  "no-dupe-scenario-names": ["error", "anywhere"],
  "no-dupe-feature-names": "error",
  "no-partially-commented-tag-lines": "error",
  "no-trailing-spaces": "error",
  "new-line-at-eof": ["error", "no"],
  "no-multiple-empty-lines": "error",
  "no-scenario-outlines-without-examples": "error",
  "name-length" : ["error", { "Feature": 10, "Scenario": 10, "Step": 10 }],
  "use-and": "error",
  "keywords-in-logical-order": "error",
  "no-duplicate-tags": "error",
  "no-superfluous-tags": "error",
  "no-homogenous-tags": "error",
  "one-space-between-tags": "error",
  "no-unused-variables": "error",
  "no-background-only-scenario": "error",
  "no-empty-background": "error",
  "scenario-size": ["error", { "steps-length": {"Background": 100, "Scenario": 100}}],
  "max-scenarios-per-file": ["error", {"maxScenarios": 2, "countOutlineExamples": true}],
  "max-tags-lines": ["error",{"feature": 1,"scenario": 1,"example": 1}],
  "allowed-tags": ["error", {"tags": ["@all", "@nombreFuncion", "@smokeTest"], "patterns": ["^@SISPLAN-[0-9]+$"]}],
  "no-examples-in-scenarios": "error",
  "table-align": ["error", { "steps": true, "examples": true }],
  "no-restricted-tags": ["off", {"tags": ["@search", "@algo"], "patterns": ["^@todo$"]}],
  "no-restricted-patterns": ["error", {
      "Global": [
        "^globally restricted pattern"
      ],
      "Feature": [
        "verify"
      ],
      "Background": [
        "show last"
      ],
      "Scenario": [
        "response"
      ],
      "Step": [
        "bad step"
      ],
      "Given": [
        "bad given"
      ],
      "When": [
        "bad when"
      ],
      "Then": [
        "bad then"
      ]
    }],
      "indentation" : ["error", {"Feature": 0, "Background": 2, "Scenario": 2, "Step": 2, "Examples": 4, "example": 6, "given": 4, "when": 4, "then": 4, "and": 4, "but": 4, "feature tag": 0, "scenario tag": 2, "examples tag": 4 } ]
}